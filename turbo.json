{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"go:build": {
			"inputs": ["backend/**/*.go"],
			"outputs": ["backend/bin/**"]
		},
		"lint": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"generate": {
			"outputs": ["frontend/gen/**", "backend/gen/**"]
		}
	}
}
